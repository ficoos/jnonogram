<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import org.bs.jnonogram.gui.components.NonogramView?>
<?import javafx.scene.control.CheckBox?>
<fx:root type="HBox" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <VBox spacing="5.0" HBox.hgrow="NEVER">
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </padding>
      <Button fx:id="startGameButton" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
              text="Start Game"/>
      <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308"
                     maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
            <ListView fx:id="playerStateListView" maxHeight="1.7976931348623157E308"
                      maxWidth="1.7976931348623157E308"/>
         </ScrollPane>
      </HBox>
   </VBox>
   <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308"
               maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
      <NonogramView fx:id="nonogramPreviewView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    minHeight="-Infinity" minWidth="-Infinity"/>
   </ScrollPane>
</fx:root>
